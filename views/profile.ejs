<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Profile</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-500 px-3 py-2 rounded-md text-sm mb-5"
          href="/api/v1/auth/logout"
          >Logout</a
        >
      </div>

      <div class="flex gap-3">
        <span>
          <img
            class="w-15 h-15 rounded-full"
            src="<%= user.profilePhoto%>"
            alt=""
          />
          <input class="hidden" type="file" name="profile" />
        </span>

        <div>
          <h2 class="text-3xl">
            <span class="text-light">Hello,</span> <%= user.name%> 🤗
          </h2>
          <h5 class="mb-5">You can create a new posts..! 💭</h5>
        </div>
      </div>
      <form action="/api/v1/posts/create" method="post">
        <textarea
          placeholder="Write your post here"
          class="resize-none p-5 w-1/3 rounded-lg outline-none p-5 mt-2 border-2 border-zinc-800 block"
          name="content"
        ></textarea>
        <input
          type="submit"
          class="px-5 py-2 rounded-md mt-5 block bg-blue-500"
          value="Create new Post"
        />
      </form>

      <div class="posts mt-20">
        <h2 class="text-zinc-400">Your Posts :</h2>

        <div class="post-container mt-5 flex flex-wrap gap-3">
          <% user.posts.reverse().forEach(function(post){%>

          <div
            class="post bg-zinc-800 w-1/3 p-4 border-[1px] border-zinc-800 rounded-md"
          >
            <h4 class="text-blue-500 mb-2">@<%=user.username%></h4>
            <p class="text-sm tracking-tight"><%=post.content%></p>
            <small class="mt-2 inline-block"
              >likes <%= post.likes.length%> 👍</small
            >
            <div class="btns w-full flex gap-5 mt-3">
              <a
                class="text-blue-500 inline-block"
                href="/api/v1/posts/like/<%= post._id%>"
                ><%= post.likes.indexOf(user._id) == -1 ? "Like": "Unlike" %></a
              >

              <a
                class="inline-block bg-gray-500 px-2 text-sm rounded-md p-1"
                href="/post/edit/<%= post._id %>"
                >Edit</a
              >
              <a
                class="inline-block bg-red-500 text-sm rounded-md p-1"
                href="/api/v1/posts/delete/<%= post._id %>"
                >delete🗑️</a
              >
            </div>
          </div>

          <% })%>
        </div>
      </div>
    </div>
  </body>
</html>
