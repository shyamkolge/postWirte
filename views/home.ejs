<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Home</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="post-container mt-5 flex flex-wrap gap-3">
        <% posts.forEach(function(post){%>

        <div
          class="post bg-zinc-800 w-1/3 p-4 border-[1px] border-zinc-800 rounded-md"
        >
          <h4 class="text-blue-500 mb-2">@<%=post.user.username%></h4>
          <p class="text-sm tracking-tight"><%=post.content%></p>
          <small class="mt-2 inline-block"
            >likes <%= post.likes.length%> 👍</small
          >
          <div class="btns w-full flex gap-5 mt-3">
            <a
              class="text-blue-500 inline-block"
              href="/api/v1/posts/like/<%= post._id%>"
              ><%= post.likes.indexOf(userId) == -1 ? "Like": "Unlike" %></a
            >
          </div>
        </div>

        <% })%>
      </div>
    </div>
  </body>
</html>
