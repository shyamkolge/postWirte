<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Blogify - Landing Page</title>
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body class="bg-zinc-900 text-white font-sans">
    <!-- Header -->
    <header class="bg-zinc-950 shadow-md">
      <div
        class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center"
      >
        <h1 class="text-2xl font-bold text-white">Blogify</h1>

        <!-- Hamburger Button (Mobile) -->
        <button
          id="menu-toggle"
          class="md:hidden focus:outline-none text-white"
          aria-label="Toggle Menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>

        <!-- Nav Links -->
        <nav
          id="nav-menu"
          class="hidden md:flex md:items-center md:gap-6 absolute md:static top-16 left-0 w-full md:w-auto bg-zinc-950 md:bg-transparent px-4 md:px-0 py-4 md:py-0 z-50"
        >
          <ul class="flex flex-col md:flex-row gap-4 md:gap-6">
            <li><a href="#" class="hover:text-blue-400">Home</a></li>
            <li><a href="#" class="hover:text-blue-400">About</a></li>
            <li><a href="/posts" class="hover:text-blue-400">Posts</a></li>
            <li><a href="#" class="hover:text-blue-400">Contact</a></li>
          </ul>
          <div class="mt-4 md:mt-0 flex gap-3 md:ml-6">
            <a
              href="/login"
              class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm"
              >Login</a
            >
            <a
              href="/register"
              class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md text-sm"
              >Register</a
            >
          </div>
        </nav>
      </div>
    </header>

    <!-- Hero Section -->
    <section
      class="min-h-screen flex items-center justify-center text-center px-6 bg-gradient-to-b from-zinc-900 to-zinc-800"
    >
      <div class="max-w-2xl">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
          Welcome to <span class="text-blue-500">Blogify</span>
        </h2>
        <p class="text-lg text-gray-300 mb-8">
          A modern platform for writers, thinkers, and storytellers. Share your
          voice with the world.
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
          <a
            href="/posts"
            class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-lg"
            >Get Started</a
          >
          <a
            href="#"
            class="border border-white hover:bg-white hover:text-zinc-900 px-6 py-3 rounded-lg text-lg"
            >Learn More</a
          >
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-zinc-950 text-center text-gray-400 py-6">
      Â© 2025 Blogify. All rights reserved.
    </footer>

    <!-- JavaScript for Menu Toggle -->
    <script>
      const toggleBtn = document.getElementById("menu-toggle");
      const navMenu = document.getElementById("nav-menu");

      toggleBtn.addEventListener("click", () => {
        navMenu.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
