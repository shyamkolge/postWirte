<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Register | Blogify</title>
  </head>
  <body class="bg-zinc-900 text-white font-sans">
    <div class="min-h-screen flex items-center justify-center px-4 py-10">
      <div
        class="w-full max-w-md bg-zinc-800 rounded-xl shadow-lg p-8 space-y-6"
      >
        <h2 class="text-3xl font-bold text-center">Create Your Account</h2>
        <form
          action="/api/v1/auth/register"
          method="POST"
          enctype="multipart/form-data"
          class="space-y-4"
        >
          <!-- Profile Photo -->
          <div>
            <label class="block mb-1 font-medium" for="profile"
              >Profile Photo</label
            >
            <input
              type="file"
              name="profile"
              id="profile"
              class="w-full text-sm text-gray-300 file:bg-zinc-700 file:border-0 file:py-2 file:px-4 file:rounded-md file:text-white hover:file:bg-zinc-600"
            />
          </div>

          <!-- Name -->
          <div>
            <label class="block mb-1 font-medium" for="name">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Full Name"
              class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Username -->
          <div>
            <label class="block mb-1 font-medium" for="username"
              >Username</label
            >
            <input
              type="text"
              name="username"
              id="username"
              placeholder="Username"
              class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Email -->
          <div>
            <label class="block mb-1 font-medium" for="email">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="you@example.com"
              class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Password -->
          <div>
            <label class="block mb-1 font-medium" for="password"
              >Password</label
            >
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Enter a strong password"
              class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Role -->
          <div>
            <label class="block mb-1 font-medium" for="role">Role</label>
            <select
              name="role"
              id="role"
              class="w-full px-4 py-2 rounded-md bg-zinc-700 border border-zinc-600 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="user">User</option>
              <option value="admin">Admin</option>
            </select>
          </div>

          <!-- Submit -->
          <div>
            <input
              type="submit"
              value="Register"
              class="w-full bg-blue-600 hover:bg-blue-700 transition-colors px-4 py-2 rounded-md font-semibold cursor-pointer"
            />
          </div>

          <!-- Link to Login -->
          <p class="text-center text-sm text-gray-400">
            Already have an account?
            <a href="/login" class="text-blue-400 hover:underline"
              >Login here</a
            >
          </p>
        </form>
      </div>
    </div>
  </body>
</html>
