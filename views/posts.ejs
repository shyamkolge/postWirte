<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Posts</title>
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body class="bg-zinc-900 text-white min-h-screen relative">
    <!-- Navbar -->
    <nav class="bg-zinc-950 shadow-md">
      <div
        class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center"
      >
        <h1 class="text-2xl font-bold text-white">Blogify</h1>

        <!-- Hamburger Button -->
        <button
          id="menu-toggle"
          class="md:hidden text-white"
          aria-label="Toggle Menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>

        <!-- Nav Links -->
        <div
          id="nav-menu"
          class="hidden md:flex md:items-center md:gap-6 absolute md:static top-16 left-0 w-full md:w-auto bg-zinc-950 md:bg-transparent px-4 md:px-0 py-4 md:py-0 z-50"
        >
          <ul class="flex flex-col md:flex-row gap-4 md:gap-6">
            <li><a href="/" class="hover:text-blue-400">Home</a></li>
            <li><a href="/posts" class="hover:text-blue-400">Posts</a></li>
          </ul>

          <!-- Profile Dropdown -->
          <div class="relative ml-auto md:ml-6 mt-4 md:mt-0">
            <button id="profile-btn" class="focus:outline-none">
              <img
                src="<%= user?.profilePhoto || 'https://via.placeholder.com/40' %>"
                alt="Profile"
                class="w-10 h-10 rounded-full border-2 border-blue-500 object-cover"
              />
            </button>

            <div
              id="dropdown-menu"
              class="hidden absolute right-0 mt-2 w-40 bg-zinc-800 rounded-md shadow-lg py-2 z-50"
            >
              <a
                href="/profile"
                class="block px-4 py-2 text-sm hover:bg-zinc-700"
                >Profile</a
              >
              <a
                href="/myPosts"
                class="block px-4 py-2 text-sm hover:bg-zinc-700"
                >My Posts</a
              >
              <a
                href="/api/v1/auth/logout"
                class="block px-4 py-2 text-sm hover:bg-zinc-700"
                >Logout</a
              >
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Posts Section -->
    <main class="p-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        <% posts.forEach(function(post) { %>
        <div
          class="bg-zinc-800 p-4 rounded-lg border border-zinc-700 shadow-sm hover:shadow-lg transition"
        >
          <h4 class="text-blue-400 font-medium mb-2">
            @<%= post.user.username %>
          </h4>
          <p class="text-sm mb-3 leading-relaxed"><%= post.content %></p>
          <div class="flex items-center justify-between text-sm text-zinc-400">
            <span>üëç <%= post.likes.length %> likes</span>
            <a
              href="/api/v1/posts/like/<%= post._id %>"
              class="text-blue-500 hover:underline"
            >
              <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
            </a>
          </div>
        </div>
        <% }); %>
      </div>
    </main>

    <!-- Floating Create Post Button -->
    <a
      href="/profile"
      class="fixed bottom-6 right-6 bg-blue-600 hover:bg-blue-700 text-white p-4 rounded-full shadow-lg text-xl transition"
      title="Create Post"
    >
      ‚úçÔ∏è
    </a>

    <!-- Script for Toggle Menu & Profile Dropdown -->
    <script>
      const menuBtn = document.getElementById("menu-toggle");
      const navMenu = document.getElementById("nav-menu");
      const profileBtn = document.getElementById("profile-btn");
      const dropdownMenu = document.getElementById("dropdown-menu");

      menuBtn.addEventListener("click", () => {
        navMenu.classList.toggle("hidden");
      });

      profileBtn?.addEventListener("click", () => {
        dropdownMenu.classList.toggle("hidden");
      });

      document.addEventListener("click", (e) => {
        if (
          !profileBtn.contains(e.target) &&
          !dropdownMenu.contains(e.target)
        ) {
          dropdownMenu.classList.add("hidden");
        }
      });
    </script>
  </body>
</html>
